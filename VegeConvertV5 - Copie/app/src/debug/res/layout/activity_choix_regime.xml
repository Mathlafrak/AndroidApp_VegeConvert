<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choix_regime">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backslow" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="416dp"
        android:layout_height="163dp"
        android:fontFamily="@font/nerko_one"
        android:gravity="center"
        android:text="Ce soir je cuisine..."
        android:textColor="#F57E0F"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="284dp"
        android:layout_height="56dp"
        android:fontFamily="@font/montserrat_alternates"
        android:scrollbarSize="50sp"
        android:text="Vegan"
        android:textColor="#B2504A4A"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.355"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="284dp"
        android:layout_height="56dp"
        android:fontFamily="@font/montserrat_alternates"
        android:scrollbarSize="50sp"
        android:text="Vegie"
        android:textColor="#B2504A4A"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="284dp"
        android:layout_height="56dp"
        android:fontFamily="@font/montserrat_alternates"
        android:scrollbarSize="50sp"
        android:text="Gluten Free"
        android:textColor="#B2504A4A"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.518"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="284dp"
        android:layout_height="56dp"
        android:fontFamily="@font/montserrat_alternates"
        android:scrollbarSize="50sp"
        android:text="Lactose Free"
        android:textColor="#B2504A4A"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch5"
        android:layout_width="284dp"
        android:layout_height="56dp"
        android:fontFamily="@font/montserrat_alternates"
        android:scrollbarSize="50sp"
        android:text="Shells Fruits Free"
        android:textColor="#B2504A4A"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.684"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="349dp"
        android:layout_height="53dp"
        android:backgroundTint="#F57E0F"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="center"
        android:text="Clique pour continuer"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.803" />

