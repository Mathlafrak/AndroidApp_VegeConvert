<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".course">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backslow" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:fontFamily="@font/nerko_one"
        android:gravity="center"
        android:text=" Liste de courses"
        android:textColor="#F57E0F"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <ImageView
        android:id="@+id/arrow_left"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:background="@drawable/arrow_left"
        app:iconGravity="textEnd"
        app:iconTint="#A91D58"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954"
        app:rippleColor="#03A9F4" />


    <ImageView
        android:id="@+id/house"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:background="@drawable/house"
        app:iconGravity="textEnd"
        app:iconTint="#A91D58"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:rippleColor="#03A9F4" />

    <ScrollView
        android:layout_width="375dp"
        android:layout_height="439dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/courseentree"
                android:layout_width="match_parent"
                android:layout_height="289dp"
                android:background="#D9D9D9"
                android:fontFamily="@font/montserrat_alternates"
                android:gravity="center"
                android:paddingBottom="190dp"
                android:text="EntrÃ©e"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.046" />

            <TextView
                android:id="@+id/courseplat"
                android:layout_width="match_parent"
                android:layout_height="289dp"
                android:background="#D9D9D9"
                android:fontFamily="@font/montserrat_alternates"
                android:gravity="center"
                android:paddingBottom="190dp"
                android:text="Plat"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.046" />

            <TextView
                android:id="@+id/coursedessert"
                android:layout_width="match_parent"
                android:layout_height="289dp"
                android:background="#D9D9D9"
                android:fontFamily="@font/montserrat_alternates"
                android:gravity="center"
                android:paddingBottom="190dp"
                android:text="Dessert"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.046" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>