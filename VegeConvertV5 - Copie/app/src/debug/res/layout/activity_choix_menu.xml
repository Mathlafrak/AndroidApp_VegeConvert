<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choix_menu">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backslow"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="416dp"
        android:layout_height="163dp"
        android:fontFamily="@font/nerko_one"
        android:gravity="center"
        android:text="Ce soir je mange.."
        android:textColor="#F57E0F"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <Switch
        android:id="@+id/switchEntree"
        android:checked="false"
        android:textOff="No"
        android:textOn="Yes"
        android:layout_width="197dp"
        android:layout_height="55dp"
        android:fontFamily="@font/montserrat_alternates"
        android:scrollbarSize="50sp"
        android:text="EntrÃ©e"
        android:textColor="#B2504A4A"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.399"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <Switch
        android:id="@+id/switchPlat"
        android:layout_width="197dp"
        android:layout_height="55dp"
        android:fontFamily="@font/montserrat_alternates"
        android:scrollbarSize="50sp"
        android:text="@string/plat"
        android:textColor="#B2504A4A"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switchDessert"
        android:layout_width="197dp"
        android:layout_height="55dp"
        android:fontFamily="@font/montserrat_alternates"
        android:scrollbarSize="50sp"
        android:text="Dessert"
        android:textColor="#B2504A4A"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.562"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="349dp"
        android:layout_height="53dp"
        android:backgroundTint="#F57E0F"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="center"
        android:text="Clique pour choisir ton menu"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794" />

    <ImageView
        android:id="@+id/arrow_left"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:background="@drawable/arrow_left"
        app:iconGravity="textEnd"
        app:iconTint="#A91D58"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        app:rippleColor="#03A9F4" />

</androidx.constraintlayout.widget.ConstraintLayout>